<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	version="3.1">

	<servlet>
		<servlet-name>mainServlet</servlet-name>
<!-- 		<servlet-class>com.softserve.edu.Hello</servlet-class> -->
	</servlet>

	<servlet-mapping>
		<servlet-name>mainServlet</servlet-name>
		<url-pattern>/delivery/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>welcomeJSP</servlet-name>
		<jsp-file>/resources/views/welcome.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>welcomeJSP</servlet-name>
		<url-pattern>/wel</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>workJSP</servlet-name>
		<jsp-file>/resources/views/work.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>workJSP</servlet-name>
		<url-pattern>/work</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>testJSP</servlet-name>
		<jsp-file>/WEB-INF/test.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>testJSP</servlet-name>
		<url-pattern>/test</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>execJSP</servlet-name>
		<jsp-file>/WEB-INF/views/exec.jsp</jsp-file>
	</servlet>

	<servlet-mapping>
		<servlet-name>execJSP</servlet-name>
		<url-pattern>/exec</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>wel</welcome-file>
<!-- 		<welcome-file>hello</welcome-file> -->
	</welcome-file-list>

</web-app>
